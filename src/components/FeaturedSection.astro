---

const courses = [
  {
    title: "Free Math PSLE 10 Years Series",
    buttonText: "Get It Now",
    buttonColor: "bg-primary hover:bg-blue-800",
    image: "/items/10-year-series.webp",
    link: null,
  },
  {
    title: "Free 1 Month Tuition Online Classes",
    buttonText: "Claim Your Trial",
    buttonColor: "bg-primary hover:bg-blue-800",
    image: "/items/teaching-student.webp",
    link: null,
  },
  {
    title: "Free Past Year Math Exam Papers",
    buttonText: "Get It Now",
    buttonColor: "bg-primary hover:bg-blue-800",
    image: "/items/looking-over.webp",
    link: "/free-exam-papers",
  },
];
---

<div class="py-8 sm:py-16 bg-background">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 sm:gap-8 lg:gap-12">
      {
        courses.map((course) => (
          <div class="flex flex-col items-center text-center p-3 sm:p-0">

            {/* Title */}
            <h3 class="text-base sm:text-2xl lg:text-3xl font-bold text-gray-900 mb-0 sm:mb-6 h-20 sm:h-24 flex items-center justify-center">
              {course.title}
            </h3>

            {/* Image */}
            <div class="w-full aspect-square max-w-[180px] sm:max-w-sm mb-0 sm:mb-8 rounded-lg overflow-hidden">
              <img
                src={course.image}
                alt={course.title}
                class="w-full h-full object-cover"
              />
            </div>

            {/* Button */}
            {course.link ? (
              <a
                href={course.link}
                class={`${course.buttonColor} text-white px-4 sm:px-8 py-3 sm:py-4 rounded-full text-sm sm:text-lg font-semibold transition-colors duration-200 w-full max-w-[180px] sm:max-w-xs text-center block`}>
                {course.buttonText}
              </a>
            ) : (
              <button
                onclick={
                  course.title === "Free Math PSLE 10 Years Series"
                    ? "openPSLESeriesPopup()"
                    : course.title === "Free 1 Month Tuition Online Classes"
                      ? "openTuitionClassesPopup()"
                      : ""
                }
                class={`${course.buttonColor} text-white px-4 sm:px-8 py-3 sm:py-4 rounded-full text-sm sm:text-lg font-semibold transition-colors duration-200 w-full max-w-[180px] sm:max-w-xs`}>
                {course.buttonText}
              </button>
            )}
          </div>
        ))
      }
    </div>
  </div>
</div>
