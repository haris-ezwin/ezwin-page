---

<div
  id="psle-series-popup"
  class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative">
    <!-- Close Button -->
    <button
      class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
      onclick="document.getElementById('psle-series-popup').classList.add('hidden'); document.getElementById('psle-series-popup').classList.remove('flex');">
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Form Header -->
    <div class="mb-6" id="form-header">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        Get Your Free PSLE 10 Years Series
      </h2>
      <p class="text-gray-600 text-sm">
        Fill in your details and we'll send it to your email and WhatsApp!
      </p>
    </div>

    <!-- Success Message (hidden by default) -->
    <div class="hidden text-center py-8" id="success-message">
      <div class="mb-4">
        <svg class="w-16 h-16 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-3">Thank You!</h3>
      <p class="text-gray-600 text-base">
        We will send the PSLE 10 Year Series through WhatsApp and Email shortly.
      </p>
    </div>

    <!-- Form -->
    <form class="space-y-4" id="psle-series-form">
      <div>
        <label
          for="psle-name"
          class="block text-sm font-medium text-gray-700 mb-1">
          Name *
        </label>
        <input
          type="text"
          id="psle-name"
          name="name"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="Your name"
        />
      </div>

      <div>
        <label
          for="psle-email"
          class="block text-sm font-medium text-gray-700 mb-1">
          Email *
        </label>
        <input
          type="email"
          id="psle-email"
          name="email"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="your@email.com"
        />
      </div>

      <div>
        <label
          for="psle-phone"
          class="block text-sm font-medium text-gray-700 mb-1">
          Phone Number *
        </label>
        <input
          type="tel"
          id="psle-phone"
          name="phone"
          required
          pattern="[0-9]{8}"
          title="Please enter a valid SG number with 8 digits"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="88889999"
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          How did you know about us
        </label>
        <div class="grid grid-cols-2 gap-2">
          {["Facebook","TikTok","YouTube","XHS/RedNote","Website","Google Search","LinkedIn","Twitter","Friends/Family Recommendation","Other"].map((source) => (
            <label class="flex items-center gap-2 rounded-lg border border-gray-300 px-3 py-2 hover:border-primary cursor-pointer">
              <input
                type="checkbox"
                name="source"
                value={source}
                class="text-primary focus:ring-primary rounded-full"
                data-source-option
              />
              <span class="text-sm text-gray-800">{source}</span>
            </label>
          ))}
        </div>
        <p id="psle-source-helper" class="mt-1 text-xs text-gray-500">
          Select one or more options (optional).
        </p>
        <div id="psle-source-other" class="mt-2 hidden">
          <label for="psle-source-other-input" class="block text-xs font-medium text-gray-700 mb-1">
            Please share more (optional)
          </label>
          <input
            type="text"
            id="psle-source-other-input"
            name="sourceOther"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Tell us where you heard about us"
          />
        </div>
      </div>

      <button
        type="submit"
        class="w-full bg-primary text-white py-3 rounded-lg font-semibold hover:bg-blue-800 transition-colors duration-200">
        Get Free PSLE Series
      </button>
    </form>
  </div>
</div>

<script>
  // Open popup function
  window.openPSLESeriesPopup = function () {
    document.getElementById("psle-series-popup").classList.remove("hidden");
    document.getElementById("psle-series-popup").classList.add("flex");
  };

  // Check URL parameters on page load
  document.addEventListener("DOMContentLoaded", function () {
    const urlParams = new URLSearchParams(window.location.search);
    const openParam = urlParams.get("open");

    if (openParam === "psle") {
      window.openPSLESeriesPopup();
    }
  });

  // Close on outside click
  document
    .getElementById("psle-series-popup")
    .addEventListener("click", function (e) {
      if (e.target === this) {
        this.classList.add("hidden");
        this.classList.remove("flex");
      }
    });

  // Handle form submission
  const form = document.getElementById("psle-series-form") as HTMLFormElement;
  const sourceOtherContainer = document.getElementById("psle-source-other");
  const sourceOtherInput = document.getElementById("psle-source-other-input") as HTMLInputElement | null;
  const sourceCheckboxes = Array.from(document.querySelectorAll('input[name="source"][data-source-option]')) as HTMLInputElement[];

  const toggleSourceOther = () => {
    const hasOther = sourceCheckboxes.some((checkbox) => checkbox.value === "Other" && checkbox.checked);
    if (sourceOtherContainer) {
      sourceOtherContainer.classList.toggle("hidden", !hasOther);
    }
    if (!hasOther && sourceOtherInput) {
      sourceOtherInput.value = "";
    }
  };

  sourceCheckboxes.forEach((checkbox) => {
    checkbox.addEventListener("change", toggleSourceOther);
  });

  if (form) {
    form.addEventListener("submit", async function (e) {
      e.preventDefault();
      console.log("Form submitted");

      const formData = new FormData(this);
      const selectedSources = formData.getAll("source").map((value) => value.toString());
      const otherSource = formData.get("sourceOther")?.toString().trim();
      const data = {
        name: formData.get("name"),
        email: formData.get("email"),
        phone: formData.get("phone"),
        source: otherSource ? [...selectedSources.filter((source) => source !== "Other"), otherSource] : selectedSources.filter((source) => source !== "Other"),
        tag: "psle-10-years-series",
      };

      try {
        // Determine webhook URL based on environment
        const isLocalhost = window.location.hostname === "localhost" || window.location.hostname === "127.0.0.1";
        const webhookUrl = isLocalhost
          ? "https://n8n.ezwin.academy/webhook-test/cb40cc05-3519-4f51-b771-e8de61012b47"
          : "https://n8n.ezwin.academy/webhook/cb40cc05-3519-4f51-b771-e8de61012b47";

        // Send data to webhook
        await fetch(webhookUrl, {
          method: "POST",
          mode: "no-cors",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        // With no-cors mode, we can't read the response, but the request is sent
        // Hide form and header, show success message
        const formHeader = document.getElementById("form-header");
        const successMessage = document.getElementById("success-message");
        const form = document.getElementById("psle-series-form");

        if (formHeader) formHeader.classList.add("hidden");
        if (form) form.classList.add("hidden");
        if (successMessage) successMessage.classList.remove("hidden");

        // Reset form
        this.reset();
        toggleSourceOther();

        // Auto-close popup after 3 seconds
        setTimeout(() => {
          document.getElementById("psle-series-popup")?.classList.add("hidden");
          document.getElementById("psle-series-popup")?.classList.remove("flex");

          // Reset UI for next time
          if (formHeader) formHeader.classList.remove("hidden");
          if (form) form.classList.remove("hidden");
          if (successMessage) successMessage.classList.add("hidden");
        }, 3000);
      } catch (error) {
        console.error("Error submitting form:", error);
        alert("There was an error submitting your request. Please try again.");
      }
    });
  }
</script>
