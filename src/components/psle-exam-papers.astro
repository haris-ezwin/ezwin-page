<div class="max-w-6xl mx-auto px-2 py-2">
  <div
    id="psle-loading-state"
    class="mb-2 bg-white p-4 rounded-lg shadow-sm border border-gray-100 text-center">
    <div class="flex items-center justify-center">
      <svg
        class="animate-spin -ml-1 mr-3 h-5 w-5 text-primary"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24">
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
      <span class="text-sm text-gray-600">Loading PSLE papers...</span>
    </div>
  </div>

  <div
    id="psle-error-state"
    class="mb-2 bg-red-50 p-4 rounded-lg shadow-sm border border-red-200 text-center hidden">
    <p class="text-sm text-red-600">
      Failed to load PSLE papers. Please refresh the page.
    </p>
    <button
      id="psle-retry-btn"
      class="mt-2 px-3 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700">
      Retry
    </button>
  </div>

  <div
    id="psle-papers-container"
    class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden hidden divide-y divide-gray-100">
  </div>
</div>

<script>
  async function fetchExamPapers() {
    const response = await fetch("/api/exam-papers");
    if (!response.ok) throw new Error("Failed to fetch exam papers");
    return response.json();
  }

  function isPslePaper(paper) {
    const haystack = `${paper.level || ""} ${paper.type || ""} ${paper.title || ""}`;
    return haystack.toLowerCase().includes("psle");
  }

  function renderPapers(papers) {
    const sorted = [...papers].sort((a, b) => {
      const yearA = parseInt(a.year || "0", 10);
      const yearB = parseInt(b.year || "0", 10);
      if (isNaN(yearA) || isNaN(yearB)) return 0;
      return yearB - yearA;
    });

    const html = sorted
      .map(
        (paper) => `
        <div class="p-2 hover:bg-gray-50 transition-colors duration-200" data-paper-id="${paper.title}">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
            <div class="flex-1">
              <h3 class="text-sm font-semibold text-gray-900">${paper.title}</h3>
            </div>
            <div class="flex flex-col sm:flex-row gap-1">
              <a href="${paper.downloadUrl}" target="_blank" rel="noopener noreferrer"
                 class="inline-flex items-center justify-center rounded bg-primary px-2 py-1 text-xs font-semibold text-white shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-1 focus-visible:outline-offset-1 focus-visible:outline-primary">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Download
              </a>
            </div>
          </div>
        </div>
      `,
      )
      .join("");

    const container = document.getElementById("psle-papers-container");
    if (container) container.innerHTML = html;
  }

  function renderVideoButton() {
    return "";
  }

  function renderExpandableVideos() {
    return "";
  }

  async function initPsleList() {
    const loading = document.getElementById("psle-loading-state");
    const errorState = document.getElementById("psle-error-state");
    const container = document.getElementById("psle-papers-container");

    try {
      const papers = await fetchExamPapers();
      const psleOnly = papers.filter(isPslePaper);

      if (psleOnly.length === 0) {
        if (container) {
          container.innerHTML = `<div class="p-4 text-center text-sm text-gray-600">No PSLE papers available yet.</div>`;
        }
      } else {
        renderPapers(psleOnly);
      }

      loading?.classList.add("hidden");
      container?.classList.remove("hidden");
    } catch (error) {
      console.error(error);
      loading?.classList.add("hidden");
      errorState?.classList.remove("hidden");
    }
  }

  document.getElementById("psle-retry-btn")?.addEventListener("click", () => {
    document.getElementById("psle-error-state")?.classList.add("hidden");
    document.getElementById("psle-loading-state")?.classList.remove("hidden");
    initPsleList();
  });

  document.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (!target) return;

    if (target.closest(".video-expand-btn")) {
      const button = target.closest(".video-expand-btn") as HTMLElement;
      const paperId = button.getAttribute("data-paper-id");
      const paperElement = document.querySelector(
        `[data-paper-id="${paperId}"]`,
      ) as HTMLElement;

      if (paperElement) {
        const expandSection = paperElement.querySelector(
          ".video-expand-section",
        ) as HTMLElement;

        if (expandSection) {
          const isHidden = expandSection.classList.contains("hidden");
          expandSection.classList.toggle("hidden", !isHidden);
        }
      }
    }
  });

  initPsleList();
</script>
