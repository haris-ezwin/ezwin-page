<div
  id="signup-notification"
  class="fixed bottom-6 right-6 z-50 translate-y-[200%] transition-transform duration-500">
  <div class="rounded-lg shadow-lg overflow-hidden">
    <img
      src="/signed_up.jpg"
      alt="Student signed up"
      class="w-full h-[400px] object-cover"
    />
    <div class="flex items-center gap-2 p-3 bg-white">
      <div class="flex-shrink-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 text-green-500"
          viewBox="0 0 24 24"
          fill="currentColor">
          <circle cx="12" cy="12" r="12" fill="currentColor"></circle>
          <path
            d="M5 13l4 4L19 7"
            stroke="white"
            stroke-width="2"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-900">
          1 parent & student just joined free trial!
        </p>
        <p class="text-xs text-gray-500">5 April 2025, 5:13pm</p>
      </div>
    </div>
  </div>
</div>

<script>
  setTimeout(() => {
    const notification = document.getElementById("signup-notification");
    if (notification) {
      notification.style.transform = "translateY(0)";

      // Hide after 5 seconds
      setTimeout(() => {
        notification.style.transform = "translateY(200%)";
      }, 7000);
    }
  }, 5000);
</script>
