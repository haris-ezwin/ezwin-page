---
import Link from "@components/ui/link.astro";
---

<main class="relative bg-background py-8 md:py-12 overflow-hidden">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Left Content -->
      <div class="text-left">
        <div class="mb-4">
          <span
            class="bg-primary text-white px-4 py-1 rounded-full text-sm font-semibold">
            Dear Parents
          </span>
        </div>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 uppercase">
          Is your child not hitting the marks or grades you want?
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8">
          Discover why your child is not hitting the marks or grades you want
          and how you can improve it.
        </p>
        <div>
          <Link
            href="/tuition"
            style="primary"
            class="bg-primary hover:bg-primary/90 text-white px-6 md:px-12 py-3 md:py-4 rounded-full text-sm md:text-lg font-semibold uppercase inline-block text-center">
            Learn how to improve my child's marks
          </Link>
        </div>
      </div>

      <!-- Right Placeholder Image (temporary until video embed) -->
      <div class="flex justify-center lg:justify-end">
        <img
          src="https://placehold.co/720x480?text=Video+Placeholder"
          alt="Video placeholder"
          class="w-full max-w-md lg:max-w-lg rounded-lg border border-dashed border-gray-300 bg-gray-50"
        />
      </div>
    </div>
  </div>
</main>
