---
import { Image } from "astro:assets";

import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src="/hero.png"
      alt="A classroom setting with students"
      width={500}
      height={500}
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Excellence in Primary School Education
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Empowering students for PSLE success through personalized learning and
      proven teaching methods. Join Singapore's trusted tuition centre for
      Primary 1-6 students.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link href="#" class="btn bg-primary rounded-full">Book a Free Trial</Link
      >
    </div>
  </div>
</main>
