<div
  id="trial-booking-confirmed-popup"
  class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative">
    <button
      class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
      onclick="document.getElementById('trial-booking-confirmed-popup').classList.add('hidden'); document.getElementById('trial-booking-confirmed-popup').classList.remove('flex');">
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="text-center py-6">
      <h3 class="text-2xl font-bold text-gray-900 mb-2">
        Booking of trial lesson confirmed!
      </h3>
    </div>
  </div>
</div>

<script>
  const CONFIRM_HASH = "#booking-confirmed";

  window.openTrialBookingConfirmedPopup = function () {
    document
      .getElementById("trial-booking-confirmed-popup")
      .classList.remove("hidden");
    document
      .getElementById("trial-booking-confirmed-popup")
      .classList.add("flex");
  };

  const maybeOpenConfirmedPopup = () => {
    if (window.location.hash === CONFIRM_HASH) {
      window.openTrialBookingConfirmedPopup();
    }
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", maybeOpenConfirmedPopup);
  } else {
    maybeOpenConfirmedPopup();
  }

  window.addEventListener("hashchange", maybeOpenConfirmedPopup);

  document
    .getElementById("trial-booking-confirmed-popup")
    .addEventListener("click", function (e) {
      if (e.target === this) {
        this.classList.add("hidden");
        this.classList.remove("flex");
      }
    });
</script>
