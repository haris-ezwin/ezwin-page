---
const courses = [
  {
    badge: "It's Free",
    badgeColor: "bg-primary",
    title: "Free PSLE 10 Years Series",
    buttonText: "Get It Now",
    buttonColor: "bg-primary hover:bg-blue-800"
  },
  {
    badge: "Coming Soon",
    badgeColor: "bg-primary",
    title: "Personalised Roadmap to Improve the Grades",
    buttonText: "Learn More",
    buttonColor: "bg-primary hover:bg-blue-800"
  },
  {
    badge: "It's Free",
    badgeColor: "bg-primary",
    title: "Free 1 Month Trial Lesson",
    buttonText: "Claim Your Trial",
    buttonColor: "bg-primary hover:bg-blue-800"
  }
];
---

<div class="py-16 sm:py-24 bg-background">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      {courses.map((course) => (
        <div class="flex flex-col items-center">
          {/* Badge */}
          <div class="mb-6">
            <span class={`${course.badgeColor} text-white px-4 py-1 rounded text-sm font-semibold`}>
              {course.badge}
            </span>
          </div>

          {/* Title */}
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 text-center">
            {course.title}
          </h3>

          {/* Placeholder Image */}
          <div class="w-full aspect-square max-w-sm mb-8 bg-gray-200 rounded-lg flex items-center justify-center">
            <div class="text-center p-8">
              <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">Placeholder Image</p>
            </div>
          </div>

          {/* Button */}
          <button class={`${course.buttonColor} text-white px-8 py-4 rounded-full text-lg font-semibold transition-colors duration-200 w-full max-w-xs`}>
            {course.buttonText}
          </button>
        </div>
      ))}
    </div>
  </div>
</div>
