---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import RecentSignupNotification from "@components/RecentSignupNotification.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "EzWin Academy"
  : "EzWin Academy - Online Zoom PSLE, Primary School Tuition in Singapore";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8ZNVP3F95M"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-8ZNVP3F95M");
    </script>

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="EzWin Academy is a leading primary school tuition centre in Singapore, specializing in PSLE preparation and primary level education (P1-P6)."
      canonical={canonicalURL}
      twitter={{
        creator: "@ezwinacademy",
        site: "@ezwinacademy",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `EzWin Academy - Primary School Tuition Excellence`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "EzWin Academy Tuition Centre",
        },
      }}
    />
    <link rel="canonical" href="https://ez1.sg/free-trial" />
  </head>
  <body class="bg-background">
    <Navbar />
    <slot />
    <Footer />
    <RecentSignupNotification />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
