---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";

const resources = [
  {
    title: "P5 Mathematics Video Lessons",
    description:
      "Free video lessons covering key P5 Math topics. Perfect for revision and self-paced learning.",
    link: "https://ez1.sg/p5-math-video-lessons",
    grade: "P5",
    subject: "Mathematics",
    image: "/math-p5.jpg", // You'll need to add this image to your public folder
  },
  {
    title: "P4 Mathematics Video Lessons",
    description:
      "Comprehensive P4 Math video lessons to help students master fundamental concepts.",
    link: "https://ez1.sg/p4-math-video-lessons",
    grade: "P4",
    subject: "Mathematics",
    image: "/math-p4.jpg", // You'll need to add this image to your public folder
  },
];
---

<Layout title="Free Resources | EzWin Academy">
  <Container>
    <div class="py-16 sm:py-20">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
            Free Learning Resources
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Access our collection of free educational resources to support your
            child's learning journey
          </p>
        </div>

        <div
          class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
          {
            resources.map((resource) => (
              <a
                href={resource.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col bg-white shadow-lg rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300 group">
                <div class="p-8">
                  <div class="flex items-center gap-4 mb-6">
                    <span class="px-3 py-1 text-sm font-medium bg-primary/10 text-primary rounded-full">
                      {resource.grade}
                    </span>
                    <span class="px-3 py-1 text-sm font-medium bg-primary/10 text-primary rounded-full">
                      {resource.subject}
                    </span>
                  </div>

                  <h3 class="text-2xl font-semibold text-gray-900 group-hover:text-primary transition-colors">
                    {resource.title}
                  </h3>

                  <p class="mt-4 text-gray-600">{resource.description}</p>

                  <div class="mt-6 flex items-center text-primary">
                    <span class="font-medium">Access Now</span>
                    <svg
                      class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</Layout>
