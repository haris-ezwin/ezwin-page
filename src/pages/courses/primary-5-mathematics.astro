---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";

const topics = [
  {
    title: "Numbers & Operations",
    subtopics: [
      "Reading and expressing numbers up to 10 million",
      "Four basic operations",
      "Multiplication and division by 10, 100, 1000",
      "Problem-solving with word problems",
    ],
  },
  {
    title: "Fractions & Decimals",
    subtopics: [
      "Division resulting in fractional quotients",
      "Fraction-decimal conversions",
      "Operations with mixed numbers",
      "Multiplying proper/improper fractions with whole numbers",
      "Multiplication of proper/improper fractions",
      "Mixed number and whole number multiplication",
      "Application in word problems",
    ],
  },
  {
    title: "Percentage & Rate",
    subtopics: [
      "Understanding percentage notation",
      "Converting between fractions, decimals, and percentages",
      "Calculating GST, discounts, and interest rates",
      "Understanding rate concepts",
      "Finding rates, quantities, and units",
      "Solving real-world rate problems",
    ],
  },
  {
    title: "Geometry & Measurement",
    subtopics: [
      "Understanding angles in various contexts",
      "Properties of triangles (isosceles, equilateral, right-angled)",
      "Exploring parallelograms, rhombuses, and trapeziums",
      "Finding angles without construction",
      "Area of triangles and composite shapes",
      "Volume measurement in cubic units",
      "Converting between volume units (ℓ and cm³)",
    ],
  },
];
---

<Layout title="Primary 5 Mathematics | EzWin Academy">
  <Container>
    <div class="py-16 sm:py-20">
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold">Primary 5 Mathematics</h1>
        <p class="mt-4 text-lg text-gray-600">
          Advanced concepts and PSLE preparation foundation
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-sm p-8 mb-12">
          <h2 class="text-2xl font-semibold mb-4">Course Overview</h2>
          <p class="text-gray-600 mb-6">
            Our Primary 5 Mathematics program focuses on advanced mathematical
            concepts and problem-solving strategies. This year is crucial as it
            builds the foundation for PSLE preparation. Students will develop
            critical thinking skills and learn to apply mathematical concepts in
            real-world scenarios.
          </p>
        </div>

        <div class="space-y-8">
          {
            topics.map((topic) => (
              <div class="bg-white rounded-2xl shadow-sm p-8">
                <h2 class="text-2xl font-semibold mb-4">{topic.title}</h2>
                <ul class="space-y-2">
                  {topic.subtopics.map((subtopic) => (
                    <li class="flex items-center gap-2 text-gray-600">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 text-primary"
                        viewBox="0 0 20 20"
                        fill="currentColor">
                        <path
                          fill-rule="evenodd"
                          d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      {subtopic}
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>

        <div class="mt-12 text-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90">
            Enroll Now
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
