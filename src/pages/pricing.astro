---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
---

<Layout title="Pricing">
  <Container class="py-16 md:py-24">
    <div class="mx-auto max-w-5xl space-y-12">
      <div class="text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-primary">
          Pricing
        </p>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
          Simple monthly tuition
        </h1>
        <p class="text-lg text-gray-700">
          One clear price for the full EzWin Academy experience.
        </p>
      </div>

      <div class="mx-auto max-w-3xl">
        <div
          class="rounded-2xl border border-gray-200 bg-white p-10 text-center shadow-lg">
          <div class="space-y-3">
            <p class="text-sm font-semibold uppercase tracking-wide text-gray-500">
              Monthly fee
            </p>
            <p class="text-5xl md:text-6xl font-bold text-gray-900">$400</p>
            <p class="text-lg text-gray-700">
              per month (will be deducted automatically)
            </p>
            <p class="text-sm text-gray-600">
              This is the price for this year.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
