---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import TuitionClassesPopup from "@components/TuitionClassesPopup.astro";

const getToday = () => {
  const now = new Date();
  return new Date(now.getFullYear(), now.getMonth(), now.getDate());
};

const parseISODate = (value: string) => {
  const [year, month, day] = value.split("-").map(Number);
  return new Date(year, month - 1, day);
};

const rawTerms = [
  {
    title: "2025 Term 4",
    start: "2025-09-07",
    end: "2025-12-07",
    startLabel: "Sunday, 7 September 2025",
    endLabel: "Sunday, 7 December 2025",
    weeks: 13,
  },
  {
    title: "2026 Term 1",
    start: "2025-12-08",
    end: "2026-03-08",
    startLabel: "Monday, 8 December 2025",
    endLabel: "Sunday, 8 March 2026",
    weeks: 13,
  },
  {
    title: "2026 Term 2",
    start: "2026-03-09",
    end: "2026-06-14",
    startLabel: "Monday, 9 March 2026",
    endLabel: "Sunday, 14 June 2026",
    weeks: 14,
  },
  {
    title: "2026 Term 3",
    start: "2026-06-15",
    end: "2026-09-13",
    startLabel: "Monday, 15 June 2026",
    endLabel: "Sunday, 13 September 2026",
    weeks: 13,
  },
  {
    title: "2026 Term 4",
    start: "2026-09-14",
    end: "2026-12-13",
    startLabel: "Monday, 14 September 2026",
    endLabel: "Sunday, 13 December 2026",
    weeks: 13,
  },
];

const today = getToday();

const terms = rawTerms.map((term) => {
  const startDate = parseISODate(term.start);
  const endDate = parseISODate(term.end);
  const isCurrent = today >= startDate && today <= endDate;
  return { ...term, startDate, endDate, isCurrent };
});

const visibleTerms = terms.filter((term) => term.endDate >= today);
---

<Layout title="Schedule">
  <Container>
    <div class="py-16 md:py-24">
      <div class="mx-auto max-w-6xl">
        <h1
          class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 text-center">
          Class Schedule
        </h1>
        <p class="text-xl text-gray-600 mb-12 text-center">
          Choose a time slot that works best for your child
        </p>

        <!-- Timetable Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Monday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-gray-300">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Monday</h3>
            <p class="text-gray-500 italic">No lessons</p>
          </div>

          <!-- Tuesday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-gray-300">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Tuesday</h3>
            <p class="text-gray-500 italic">No lessons</p>
          </div>

          <!-- Wednesday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-gray-300">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Wednesday</h3>
            <p class="text-gray-500 italic">No lessons</p>
          </div>

          <!-- Thursday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-primary">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Thursday</h3>
            <div class="space-y-4">
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">3:00 PM - 5:00 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">5:30 PM - 7:30 PM</p>
              </div>
            </div>
          </div>

          <!-- Friday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-primary">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Friday</h3>
            <div class="space-y-4">
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">3:00 PM - 5:00 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">5:30 PM - 7:30 PM</p>
              </div>
            </div>
          </div>

          <!-- Saturday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-primary">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Saturday</h3>
            <div class="space-y-4">
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <div class="flex items-center justify-between">
                  <p class="text-primary font-semibold">10:00 AM - 12:00 PM</p>
                  <span
                    class="ml-3 inline-flex items-center px-3 py-1 rounded-full bg-primary text-white text-sm font-semibold">
                    P4
                  </span>
                </div>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <div class="flex items-center justify-between">
                  <p class="text-primary font-semibold">12:00 PM - 2:00 PM</p>
                  <span
                    class="ml-3 inline-flex items-center px-3 py-1 rounded-full bg-primary text-white text-sm font-semibold">
                    P5
                  </span>
                </div>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">3:30 PM - 5:30 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">6:00 PM - 8:00 PM</p>
              </div>
            </div>
          </div>

          <!-- Sunday -->
          <div
            class="bg-white rounded-lg shadow-md p-6 border-t-4 border-primary">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Sunday</h3>
            <div class="space-y-4">
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">10:00 AM - 12:00 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">1:00 PM - 3:00 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">3:30 PM - 5:30 PM</p>
              </div>
              <div
                class="bg-blue-50 px-4 py-3 rounded-lg border-l-4 border-primary">
                <p class="text-primary font-semibold">6:00 PM - 8:00 PM</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms Section -->
        <div class="mt-20">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
            Terms
          </h2>
          <p class="text-center text-gray-600 mb-8">Changes may apply</p>

          <div class="grid md:grid-cols-2 gap-6">
            {visibleTerms.length === 0 ? (
              <div class="col-span-full text-center text-gray-600">
                No upcoming terms at the moment.
              </div>
            ) : (
              visibleTerms.map((term) => (
                <div
                  class="bg-white rounded-lg shadow-md p-6 border-l-4 border-primary">
                  <div class="flex items-center justify-between mb-3">
                    <h3 class="text-xl font-bold text-gray-900">{term.title}</h3>
                    {term.isCurrent && (
                      <span
                        class="ml-3 inline-flex items-center px-3 py-1 rounded-full bg-primary text-white text-sm font-semibold">
                        Currently
                      </span>
                    )}
                  </div>
                  <p class="text-gray-700 mb-2">
                    <span class="font-semibold">{term.startLabel}</span> to<br />
                    <span class="font-semibold">{term.endLabel}</span>
                  </p>
                  <p class="text-gray-500 text-sm">({term.weeks} weeks)</p>
                </div>
              ))
            )}
          </div>
        </div>

        <!-- CTA -->
        <div class="mt-12 text-center">
          <p class="text-lg text-gray-600 mb-6">
            Ready to join a class? Sign up for your free trial today!
          </p>
          <button
            onclick="openTuitionClassesPopup()"
            class="bg-primary hover:bg-blue-800 text-white px-8 py-4 rounded-full text-lg font-semibold transition-colors duration-200">
            Sign Up for Free Trial
          </button>
        </div>
      </div>
    </div>
  </Container>
</Layout>

<TuitionClassesPopup />
