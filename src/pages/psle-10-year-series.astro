---
import Layout from "@layouts/Layout.astro";
import PSLEExamPapers from "@components/psle-exam-papers.astro";
---

<Layout title="PSLE 10 Year Series | EzWin Academy">
  <main class="bg-gray-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <section class="text-center mb-12">
        <p class="text-xs uppercase tracking-widest text-primary font-semibold">
          PSLE 10-Year Series
        </p>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mt-3">
          Download PSLE Past Year Papers (2014 - 2023)
        </h1>
        <p class="text-base md:text-lg text-gray-600 mt-4 max-w-3xl mx-auto">
          Access the full set of PSLE Mathematics past year examinations,
          including Paper 1, Paper 2, and answer keys. Replace the placeholder
          URLs below with your actual download links for parents and students.
        </p>
      </section>

      <PSLEExamPapers />
    </div>
  </main>
</Layout>
